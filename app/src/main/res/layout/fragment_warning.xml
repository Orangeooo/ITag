<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.warning.WarningFragment">

    <Button
        android:id="@+id/button_warning_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="OPEN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_warning_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="CLEAR"
        app:layout_constraintStart_toEndOf="@+id/button_warning_open"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_warning"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:focusableInTouchMode="false"
        android:gravity="left|top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_warning_open" />

    <TextView
        android:id="@+id/textView_warning"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="状态"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_warning" />

    <EditText
        android:id="@+id/editText_warning_distance"
        android:layout_width="265dp"
        android:layout_height="84dp"
        android:layout_marginStart="72dp"
        android:ems="10"
        android:hint="警报距离"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_warning" />

</androidx.constraintlayout.widget.ConstraintLayout>